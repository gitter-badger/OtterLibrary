<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.otter.otterlibrarydemo" >

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_SUPERUSER"/> <!-- for Superuser -->
    <uses-permission android:name="android.permission.EXPAND_STATUS_BAR" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".olog.OLogDemo"
            android:label="@string/title_activity_olog_demo" >
            <intent-filter>
                <action android:name="com.otter.otterlibrarydemo.DEMO_CODE" />
            </intent-filter>
        </activity>


        <activity
            android:name=".oconnectivity.OConnectivityDemo"
            android:label="@string/title_activity_oconnectivity_demo" >
            <intent-filter>
                <action android:name="com.otter.otterlibrarydemo.DEMO_CODE" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ofile.OFileDemo"
            android:label="@string/title_activity_ofile_demo" >
            <intent-filter>
                <action android:name="com.otter.otterlibrarydemo.DEMO_CODE" />
            </intent-filter>
        </activity>

        <activity
            android:name=".oshellcommand.OShellCommandDemo"
            android:label="@string/title_activity_oshellcommand_demo" >
            <intent-filter>
                <action android:name="com.otter.otterlibrarydemo.DEMO_CODE" />
            </intent-filter>
        </activity>

        <activity
            android:name=".oservice.OServiceDemo"
            android:label="@string/title_activity_oservice_demo" >
            <intent-filter>
                <action android:name="com.otter.otterlibrarydemo.DEMO_CODE" />
            </intent-filter>
        </activity>
        <service android:name=".oservice.DummyService" />

        <activity
            android:name=".ostatusbar.OStatusBarDemo"
            android:label="@string/title_activity_statusbar_demo" >
            <intent-filter>
                <action android:name="com.otter.otterlibrarydemo.DEMO_CODE" />
            </intent-filter>
        </activity>

    </application>

</manifest>
